@model IEnumerable<Data.Models.AdminUserDisplayViewModel>

@{
    ViewBag.Title = "Display Users";
}

<h2>DisplayUsers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("User Posts", "UserPosts", new { username = item.UserName }) |
            @if (item.IsAdmin)
            {
                <label>Admin</label>
            }
            else
            {
                @Html.ActionLink("Change User To Admin", "ChangeUserToAdmin", new { username = item.UserName })
            }
        </td>
    </tr>
}

</table>
