@model Data.Models.MessageViewModel

@{
    ViewBag.Title = "CreateMessage";
}

<h2>Create Message</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Type your message here</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <dl class="dl-horizontal">
                <dt>
                   <b>From:</b>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sender)
                </dd>

                <dt>
                    <b>To:</b>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Receiver)
                </dd>
            </dl>
            <div class="form-group">
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.MessageBody, new { @class = "form-control" })
                </div>
                <br>
                <br>
                <div class="col-md-offset-2 col-md-10"  style="padding-top:10px">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index","Posts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
